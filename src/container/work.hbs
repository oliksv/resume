{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
        <section>
          {{>title h1=true data="Work history"}}
          <div>
            <p>
             <ul>
                {{#each works}}
                <li>
                  <div> {{position}}</div>
                  <br>
                  <div>{{duration.from}} - {{#if duration.to}} {{duration.to}}{{else}}(Досі працюємо...){{/if}}</div>
                  <br>
                      
                        {{#if company.url includeZero=true}}
                        <div>{{>link text=company.name href=company.url  blank=true noLine=true}}</div>
                          {{else}}
                        <b>{{company.name}}</b> 
                        {{/if}} 
                      
                  <br>
                  <br>
                      <div><strong>Projects  {{projectAmout}}</strong></div>
                      <br>
                          <ul>
                            {{#each projects}}
                            <li>
                              
                              <div>{{>link text=name href=company.url  blank=true noLine=true}}</div>
                              
                              <br>
                                  <div> <p>Discription:{{about}}</p></div>
                                        <em>Project stacks</em>
                                        <br>
                                        <ul>
                                          {{#each stacks}}
                                            <li>{{name}}</li>
                                          {{/each}}
                                        </ul>
                                        <br>
                                        <div><em><b>Project stacks  ({{stackAmout}})</em></b></div>
                                        <br>
                                        <em>Project awards</em>
                                        <br>
                                        <ul>
                                          {{#each awards}}
                                            <li>{{name}}</li>
                                          {{/each}}
                                        </ul>

                            </li>
                            {{/each}}
                          </ul>
                </li>
                <br>
                {{/each}}
             </ul>
             
            </p>
          </div>
        </section>
     </main>
{{/with}}
</div>

