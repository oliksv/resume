<main>
  <div class='card'>
    <div class='card-body'>
      {{#with navigation}}
        <ul class='nav'>
          {{#each links}}
            <li class='nav-item'>
              <a
                class='nav-link'
                href={{this.href}}
              >{{this.text}}</a>
            </li>
          {{/each}}
        </ul>
      {{/with}}
    </div>
  </div>

<div class="row">
  {{#with newsBlock}}
  <h2 class="d-flex justify-content-center">{{title}}</h2>
  {{#each cards}}
      <div class="col-4">
      {{>newsblock data=this}}
      </div>
      {{/each}}
    </div>
  {{/with}}
</div>

<div>
    {{#with goodsBlock}}
    <ul class="nav nav-tabs">
        {{#each tabs}}
        <li class="nav-item">
            {{#if isActive}}
                    <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                {{else}} 
                    {{#if isDisabled}}
                            <a class="nav-link disabled">{{text}}</a>
                        {{else}} 
                        <a class="nav-link ">{{text}}</a>
                    {{/if}}
            {{/if}}
             
        </li>
        {{/each}}
    </ul>
    {{/with}}
</div>

<div class="row">
  {{#with goodsBlock}}
  <h2 class="d-flex justify-content-center">Cards</h2>
  {{#each cards}}
      <div class="col-4">
      {{>newcard data=this}}
      </div>
      {{/each}}
    </div>
  {{/with}}
</div>

<div class="row">
  {{#each footer}}
      <div class="col-4">
      {{>newlist data=this}}
      </div>
      {{/each}}
    </div>
</div>

</main>