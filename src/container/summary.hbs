{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
    <section>
      {{>title big=true data=summary.title}}
      <div>
        <p>
          {{summary.text}}
        </p>
      </div>
    </section>

    <section>
      {{>title  big=false data=experience.title}}
       
       {{#with experience}}
      <div>
        <p>
          {{text}}
        </p>
      </div>
      {{/with}}
    </section>
  </main>
{{/with}}
</div>

